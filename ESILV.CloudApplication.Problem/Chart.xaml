<Window x:Class="ESILV.CloudApplication.Problem.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:DV="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:local="clr-namespace:ESILV.CloudApplication.Problem"
        mc:Ignorable="d"
        Title="Chart" Height="300" Width="700">

    <ScrollViewer >
        <Grid Name="grid" Height="300" Width="700">
            <DVC:Chart  Canvas.Top="80" Canvas.Left="10" Name="mcChart" Background="LightSteelBlue" >
                <DVC:Chart.Series>
                    <DVC:BarSeries  Title="Number of flights per destinations" IndependentValueBinding="{Binding Path=Key}" DependentValueBinding="{Binding Path=Value}"/>
                </DVC:Chart.Series>
            </DVC:Chart>
        </Grid>
    </ScrollViewer>

</Window>
